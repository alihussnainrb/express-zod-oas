{
  "name": "express-zod-oas",
  "displayName": "Express Zod OAS",
  "description": "Express.js wrapper integrating Zod for request validation and automatic OpenAPI doc generation. Features TypeScript support, middleware compatibility, and built-in documentation UI options.",
  "version": "0.1.2",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "Ali Hussnain",
  "module": "dist/express-zod-oas.esm.js",
  "size-limit": [
    {
      "path": "dist/express-zod-oas.cjs.production.min.js",
      "limit": "40 KB"
    },
    {
      "path": "dist/express-zod-oas.esm.js",
      "limit": "40 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.4",
    "husky": "^9.1.5",
    "size-limit": "^11.1.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.7.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "@types/express": "^4.17.21"
  },
  "dependencies": {
    "@anatine/zod-mock": "^3.13.4",
    "@asteasolutions/zod-to-openapi": "^7.1.1",
    "@faker-js/faker": "^8.4.1",
    "@scalar/express-api-reference": "^0.4.148",
    "express": "^4.19.2",
    "zod": "^3.23.8"
  }
}
